<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F4F6F9"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Título -->
        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estadísticas del Repartidor"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#2E7D32"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center"/>

        <!-- Tarjeta Total de Entregas -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            app:cardCornerRadius="12dp"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@android:drawable/ic_menu_send"
                    android:tint="#2E7D32"
                    android:layout_marginEnd="12dp"/>

                <TextView
                    android:id="@+id/txtTotalEntregas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total de entregas: 0"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:textStyle="bold"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Tarjeta Promedio Calificación -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            app:cardCornerRadius="12dp"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@android:drawable/star_big_on"
                    android:tint="#FFD700"
                    android:layout_marginEnd="12dp"/>

                <TextView
                    android:id="@+id/txtPromedioCalificacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Promedio de calificación: N/A"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:textStyle="bold"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Tarjeta Dinero Recaudado -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:elevation="4dp"
            app:cardCornerRadius="12dp"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@android:drawable/ic_menu_info_details"
                    android:tint="#2E7D32"
                    android:layout_marginEnd="12dp"/>

                <TextView
                    android:id="@+id/txtDineroRecaudado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dinero recaudado: $0.00"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:textStyle="bold"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Botón Volver al Menú -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVolverMenu"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Volver al Menú"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:elevation="4dp"
            app:cornerRadius="12dp"
            android:backgroundTint="#2E7D32"/>
    </LinearLayout>
</ScrollView>
