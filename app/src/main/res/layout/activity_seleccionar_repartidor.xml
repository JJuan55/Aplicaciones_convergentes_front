<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F9FAFB"
    tools:context=".vista.SeleccionarRepartidorActivity">

    <TextView
        android:id="@+id/tvTituloSeleccionRepartidor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seleccionar Repartidor"
        android:textSize="22sp"
        android:textColor="#FF9800"
        android:gravity="center"
        android:padding="16dp"
        android:background="#E5E7EB"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/progressRepartidores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/tvEmptyRepartidores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No hay repartidores disponibles"
        android:textSize="16sp"
        android:gravity="center"
        android:padding="12dp"
        android:visibility="gone"
        android:textColor="#777" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerRepartidores"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="12dp"
        tools:listitem="@layout/item_repartidor_card" />

    <Button
        android:id="@+id/btnConfirmarRepartidor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirmar Asignación"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF9800"
        android:layout_margin="16dp"
        android:elevation="3dp"
        android:padding="12dp"
        android:enabled="false"/>

    <Button
        android:id="@+id/btnVerInfoRepartidor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ver información del repartidor"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:backgroundTint="#4CAF50"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:elevation="3dp"
        android:padding="12dp"
        android:visibility="gone"/>

</LinearLayout>

