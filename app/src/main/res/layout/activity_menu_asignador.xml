<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F4F6F9"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Panel superior naranja con bienvenida -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="24dp"
            android:background="#FF9800"
            android:gravity="center_vertical"
            android:elevation="8dp"
            android:layout_marginBottom="32dp"
            android:clipToPadding="false">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@android:drawable/ic_menu_myplaces"
                app:tint="@android:color/white"
                android:layout_marginEnd="16dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvBienvenidaAsignador"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bienvenido Asignador"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvCorreoAsignador"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="correo@ejemplo.com"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Contenedor de botones estilo tarjeta centrados -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Bot贸n Asignar Encomiendas -->
            <LinearLayout
                android:id="@+id/btnAsignarEncomiendas"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_marginBottom="24dp"
                android:elevation="4dp"
                android:background="#FF9800"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:src="@android:drawable/ic_menu_upload"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    app:tint="@android:color/white"
                    android:layout_marginEnd="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Asignar Encomiendas"
                    android:textColor="@android:color/white"
                    android:textSize="17sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Bot贸n Cerrar Sesi贸n -->
            <LinearLayout
                android:id="@+id/btnCerrarSesion"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:elevation="4dp"
                android:background="#D32F2F"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:src="@android:drawable/ic_lock_power_off"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    app:tint="@android:color/white"
                    android:layout_marginEnd="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cerrar Sesi贸n"
                    android:textColor="@android:color/white"
                    android:textSize="17sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
